<% if obj.errors.any? %>
  <h2>There was an error in your submission.</h2>
  <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @listing do |f| %>
  <p>
    <%=f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit(obj.new_record? ?  "Create New To Do" : "Edit To Do") %>
  </p>
<% end %>